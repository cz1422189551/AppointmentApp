<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="24dp"
        android:background="@mipmap/linear_borad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.codeboy.android.aligntextview.AlignTextView
                android:textColor="@color/colorPrimaryText"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海洋实验室正式开放"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/tv_push_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-12-12 08:40"
                    android:textSize="12dp" />
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/tv_announcement_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:minLines="2"
                android:textColor="@color/colorPrimary"
                android:text="公告内容" />

        </LinearLayout>





        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="right"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布人 :  "
                    android:textSize="16dp" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:id="@+id/tv_push_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="狮子吃咸鱼"
                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>