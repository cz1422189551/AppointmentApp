<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <!--类别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/colorPrimary"
                app:ms_floatingLabelColor="@color/colorPrimaryText"
                app:ms_floatingLabelText="实验室类别"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="请选择实验室类别"
                app:ms_multiline="true" />
        </LinearLayout>

        <!--实验室-->
        <LinearLayout
            android:id="@+id/ll_laboratory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_laboratory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_baseColor="@color/colorPrimary"
                app:ms_floatingLabelColor="@color/colorPrimaryText"
                app:ms_floatingLabelText="实验室"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="请选择实验室"
                app:ms_multiline="true" />

        </LinearLayout>


        <!--选择时段-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="0dp"
                app:ms_baseColor="@color/colorPrimary"
                app:ms_floatingLabelColor="@color/colorPrimaryText"
                app:ms_floatingLabelText="日期"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="请选择日期"
                app:ms_multiline="true" />


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="0dp"
                app:ms_baseColor="@color/colorPrimary"
                app:ms_floatingLabelColor="@color/colorPrimaryText"
                app:ms_floatingLabelText="时段"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="请选择时段"
                app:ms_multiline="true" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spinner_minute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="0dp"
                app:ms_baseColor="@color/colorPrimary"
                app:ms_floatingLabelColor="@color/colorPrimaryText"
                app:ms_floatingLabelText="使用时间"
                app:ms_highlightColor="@color/colorPrimary"
                app:ms_hint="请选择时长"
                app:ms_multiline="true" />




        </LinearLayout>

        <!-- 个人信息-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空闲数量"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="right">

                    <TextView
                        android:id="@+id/tx_available"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/colorPrimary"
                        android:textSize="24dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="right">

                <Button
                    android:id="@+id/btn_available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="姓名"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    app:met_clearButton="true"
                    app:met_errorColor="#ff0000"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="姓名"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_textColorHint="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/et_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="联系电话"
                    android:textCursorDrawable="@null"
                    android:textSize="16dp"
                    app:met_clearButton="true"
                    app:met_errorColor="#ff0000"
                    app:met_floatingLabel="normal"
                    app:met_floatingLabelText="联系电话"
                    app:met_primaryColor="@color/colorPrimary"
                    app:met_textColorHint="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

        <!--提交-->
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_submit"
                android:text="提交"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>